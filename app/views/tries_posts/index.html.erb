<h1 class="text-3xl font-bold mb-6">Blog Posts</h1>

<% @posts_data['posts'].each do |post| %>
  <div class="blog-post flex bg-white shadow-md rounded-lg p-4 mb-4 transition-transform duration-200 hover:shadow-lg">
    <div class="content w-1/2 flex-1 pr-4 flex flex-col justify-between"> 
      <div>
        <h2 class="text-2xl font-semibold mb-2"><%= post['title'] %></h2>
        <p class="text-gray-700 mb-4"><%= post['excerpt'] %></p>
      </div>
      <a href="<%= post['url'] %>" class="text-blue-500 hover:text-blue-700">Read More</a>
    </div>
    <div class="image w-1/3 flex-shrink-0">
      <img src="<%= post['feature_image'] %>" alt="<%= post['title'] %> Image" class="w-full h-full object-cover rounded-lg">
    </div>
  </div>
<% end %>
<div class="flex justify-between mt-6">
  <% if @pagination['prev'] %>
    <a href="<%= tries_posts_path(page: @pagination['prev']) %>" class="text-blue-500 hover:text-blue-700">Previous</a>
  <% end %>
  <span>Page <%= @pagination['page'] %> of <%= @pagination['pages'] %></span>
  <% if @pagination['next'] %>
    <a href="<%= tries_posts_path(page: @pagination['next']) %>" class="text-blue-500 hover:text-blue-700">Next</a>
  <% end %>
</div>
