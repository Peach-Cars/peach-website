<div class="container mx-auto px-4 ">
<h1 class="text-3xl font-bold mb-6 text-center">Blog Posts</h1>
<% @posts_data['posts'].each do |post| %>
  <div class="flex flex-col md:flex-row md:flex-row justify-start items-start">
    <div class="content w-full md:w-2/3 p-4 ">
        <h2 class="text-2xl font-semibold mb-2"><%= post['title'] %></h2>
        <p class="text-gray-700 mb-4"><%= post['excerpt'] %></p>
    </div>
    <div class="image w-full md:w-1/3 p-4">
    <img src="<%= post['feature_image'] %>" alt="<%= post['title'] %> Image" class="w-full h-auto object-cover rounded-lg">

    </div>
</div>


    <% end %>
    <div class="mt-6 flex justify-end space-x-4">

    <div class="mb-4 text-center text-gray-600">
        Showing <%= @pagination['limit'] %> of <%= @pagination['total'] %> posts
    </div>
</div>
</div>